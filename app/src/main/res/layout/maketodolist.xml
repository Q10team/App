<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodoList.MakeTodoList">


    <LinearLayout
        android:id="@+id/framereg"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text=" 일정 추가"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/btn_regback"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@color/white"
            app:srcCompat="?attr/actionModeCloseDrawable" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/framereg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/framereg">

        <EditText
            android:id="@+id/et_title"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/textback"
            android:ems="15"
            android:hint="   제목"
            android:inputType="text"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="43dp" />


        <EditText
            android:id="@+id/et_content"
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/textback"
            android:ems="15"
            android:gravity="start|top"
            android:hint="   내용"
            android:inputType="textMultiLine"
            tools:layout_editor_absoluteX="169dp"
            tools:layout_editor_absoluteY="120dp" />


        <RatingBar
            android:id="@+id/rb_importance"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:isIndicator="false"
            android:numStars="5"
            android:stepSize="1.0"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="268dp" />


        <EditText
            android:id="@+id/et_processHours"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/textback"
            android:ems="15"
            android:hint="   예상 소요시간"
            android:inputType="text"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="354dp" />

        <LinearLayout
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_year"
                android:layout_width="48dp"
                android:layout_height="47dp"
                android:background="@drawable/textback"
                android:ems="15"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="165dp"
                tools:layout_editor_absoluteY="415dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="-"
                android:textAlignment="center"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/et_month"
                android:layout_width="48dp"
                android:layout_height="47dp"
                android:background="@drawable/textback"
                android:ems="15"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="237dp"
                tools:layout_editor_absoluteY="415dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="-"
                android:textAlignment="center"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/et_day"
                android:layout_width="48dp"
                android:layout_height="47dp"
                android:background="@drawable/textback"
                android:ems="15"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="306dp"
                tools:layout_editor_absoluteY="415dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_regsave"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="추가" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>